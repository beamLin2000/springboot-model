        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxa.pay.mapper.OrderPayMapper">

    <update id="updataForPay">
        update `order` set order_status='待发货',order_payTime=#{payTime} where order_no = #{orderNo}
    </update>
</mapper>